@model IEnumerable<ProyectoASE.Models.PacientesModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="input-group input-group-lg">
    @using (Html.BeginForm("Index", "Pacientes", FormMethod.Get))
    {
        <b>Opción de busqueda: </b>
        @Html.RadioButton("option", "Name") <text>Nombre</text>
        @Html.RadioButton("option", "DPI") <text>DPI</text>
        @Html.TextBox("Search") <input type="submit" name="submit" value="Search" />
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DPI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastAppoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NextAppoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DPI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastAppoint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextAppoint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
